<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.mapper.UserMapper">
	<resultMap type="User" id="userMap">
		<id property="userId" column="UserId"/>
		<result property="pw" column="PW"/>
		<result property="email" column="Email"/>
<!--			<result property="listOption" column="ListOption"/> -->
		<result property="picture" column="Picture"/>
		<result property="introduce" column="Introduce"/>
		<result property="admin" column="Admin" typeHandler="BooleanToYnHandler"/>
		<collection property="connChains" column="connUserId" ofType="String" select="store.mapper.BucketlistMapper.selectConnChainsByBucketlistId" javaType="ArrayList" jdbcType="NUMERIC"/>
	</resultMap>

	<sql id="selectUser">
		SELECT UserId, PW, Email, Picture, Introduce, Admin
		FROM user_tb
	</sql>

	<insert id="insertUser" parameterType="User">
INSERT INTO User_TB(userId, pw, email, listoption, introduce)
		values  (#{userId } , #{pw }, #{email }, #{listOption }, #{introduce })	</insert>

	<update id="updateUser" parameterType="User">

	</update>

	<delete id="deleteUser" parameterType="int">

	</delete>
	
	<select id="selectUserByUserId" parameterType="String" resultType="User">
		<include refid="selectUser" />		
		where userId = #{userId}
	</select>

	<select id="selectUsersByConnChains" parameterType="String" resultMap="userMap">
		<include refid="selectUser" />
		
	</select>

</mapper>