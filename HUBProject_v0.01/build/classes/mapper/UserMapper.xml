<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.mapper.UserMapper">
	<resultMap type="User" id="userMap">
		
	</resultMap>

	<sql id="selectUser">
		SELECT userId, password as pw
		FROM customer_tb
	</sql>

	<insert id="insertUser" parameterType="Bucketlist">

	</insert>

	<update id="updateUser" parameterType="Bucketlist">

	</update>

	<delete id="deleteUser" parameterType="int">

	</delete>
	
	<select id="selectUserByUserId" parameterType="String" resultType="User">
		<include refid="selectUser" />		
		where userId = #{userId}
	</select>

	<select id="selectUsersByConnChains" parameterType="String" resultMap="userMap">
		<include refid="selectUser" />
		
	</select>

</mapper>